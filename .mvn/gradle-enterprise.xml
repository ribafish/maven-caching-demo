<gradleEnterprise>
    <server>
        <url>https://ec2-3-237-201-221.compute-1.amazonaws.com/</url>
        <allowUntrusted>true</allowUntrusted>
    </server>
    <buildScan>
        <publish>ALWAYS</publish>
        <backgroundBuildScanUpload>#{env['CI'] == null}</backgroundBuildScanUpload>
        <capture>                                           <!-- For extension >= 1.11 -->
            <goalInputFiles>true</goalInputFiles>
        </capture>
        <values>
            <value>
                <name>Build number</name>
                <value>${project.buildNumber}</value>
            </value>
        </values>
    </buildScan>
    <buildCache>
        <local>
            <enabled>false</enabled>
            <storeEnabled>true</storeEnabled>
            <directory>build-cache</directory>
        </local>
        <remote>
            <enabled>true</enabled>
            <storeEnabled>true</storeEnabled>
        </remote>
    </buildCache>
</gradleEnterprise>
